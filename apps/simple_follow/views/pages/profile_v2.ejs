<!DOCTYPE html>
<html lang="en">
  <head>
    <base href="/">
    <script type="text/javascript" src="../index.js" defer></script>
    <link rel="stylesheet" href="./styles/style.css" />
  </head>

  <%- include('../partials/google_analytics.ejs') %>

  <body class="antialiased">
    <div class="h-screen flex flex-col justify-between items-center pb-4">
    <%- include('../partials/navbar.ejs') %>
    <div class="relative container h-2/3 mx-auto px-4 flex flex-col justify-center items-center">
      <div class="absolute top-0 -left-4 w-48 h-48 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-50 animate-blob"></div>
      <div class="absolute bottom-0 -right-4 w-48 h-48 bg-yellow-300 rounded-full mix-blend-multiply filter blur-xl opacity-50"></div>
      <div class="absolute top-10 -left-8 w-48 h-48 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-50 animate-blob animation-delay-4000"></div>
      <div class="w-1/3 flex flex-col items-center space-y-2 p-4 border-2 border-gray-800 rounded-lg bg-orange-50 drop-shadow-md">
        <div class="w-36 h-36 rounded-full overflow-hidden border-2 border-gray-400 bg-white"><img src="https://i.pravatar.cc/300"></div>
        <div class="flex flex-col items-center text-center">
          <div class="font-semibold"><%= handle %></div>
          <div class="font-light text-xs text-red-600 break-all w-2/3"><%= did %></div>
          <% if (isRolodexFollower) { %>
            <div class="text-sm">You also follow them on Rolodex.</div>
          <% } %>
          <% if (current_user !== handle) { %>
            <% if (followers.includes(current_user)) { %>
              <button type="submit" class="rounded-lg bg-blue-500 px-2 py-2 text-gray-200 opacity-50 cursor-not-allowed">Following</button>
            <% } else { %>
              <form id="form1" method="post" action="/follow" class="space-y-1 text-center">
                <input type="hidden" name="fhandle" value=<%= current_user %>>
                <input type="hidden" name="phandle" value= <%= handle %> >
                <button type="submit" class="rounded-lg bg-blue-500 px-2 py-2 text-gray-200">Follow</button>
             </form>
            <% } %>
          <% } %>
        </div>
        <div class="flex flex-row space-x-4 justify-center max-h-1/3 w-full pt-4">
          <div class="flex flex-col">
            <p class="font-semibold"><%= followingsCount %> <span class="text-sm font-medium text-gray-600">Following</span></p>
            <div class="flex flex-col overflow-y-scroll w-full">
              <table class="text-left">
                <thead>
                </thead>
                <tbody>
                  <% followings.forEach(function(following) { %>
                  <tr>
                    <td><%= following %></td>
                  </tr>
                  <% });
                  %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="flex flex-col">
            <p class="font-bold"><%= followersCount %> <span class="text-sm font-medium text-gray-600">Followers</span></p>
            <div class="flex flex-col overflow-y-scroll w-full">
              <table class="text-left">
                <thead>
                </thead>
                <tbody>
                  <% followers.forEach(function(follower) { %>
                  <tr>
                    <td><%= follower %></td>
                  </tr>
                  <% });
                  %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/shovel.ejs') %>
  </div>
  </body>
</html>
