<!DOCTYPE html>
<html lang="en">
  <head>
    <base href="/">
    <script type="text/javascript" src="../index.js" defer></script>
    <link rel="stylesheet" href="./styles/style.css" />
  </head>

  <%- include('../partials/google_analytics.ejs') %>

  <body class="antialiased">
    <div class="h-screen flex flex-col justify-between items-center pb-4">
    <%- include('../partials/navbar.ejs') %>
    <div class="relative container mx-auto px-4 flex flex-col justify-center items-center">
      <div class="absolute top-0 -left-4 w-48 h-48 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-50 animate-blob"></div>
      <div class="absolute bottom-0 -right-4 w-48 h-48 bg-yellow-300 rounded-full mix-blend-multiply filter blur-xl opacity-50"></div>
      <div class="absolute top-10 -left-8 w-48 h-48 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-50 animate-blob animation-delay-4000"></div>
      <div class="w-1/2 flex flex-col items-center space-y-2 p-2 border-2 border-gray-800 rounded-lg bg-orange-50 drop-shadow-md">
        <div class="w-48 h-48 rounded-lg border-2 border-gray-400 flex items-center justify-center bg-white"><img src="https://i.pravatar.cc/300"></div>
        <div class="flex flex-col items-center text-center">
          <div class="font-semibold"><%= handle %></div>
          <div class="font-medium text-red-600 break-all"><%= did %></div>
          <div class="text-sm">You have <%= rolodexFollowersCount %> Followers & <%= rolodexFollowingsCount %> Following on Rolodex </div>
          <form id="form1" method="post" action="/follow" class="space-y-1 text-center">
            <% if (current_user) { %>
              <input type="hidden" name="fhandle" value=<%= current_user %>>
            <% } else { %>
              <label>Put your handle to follow this profile</label></br>
              <label for="team_name" class="font-bold">@</label>
              <input type="text" name="fhandle" class="border border-gray-300 px-2 py-1 rounded-lg">
            <% } %>
            <input type="hidden" name="phandle" value= <%= handle %> >
            <button type="submit" class="rounded-lg bg-blue-500 px-2 py-2 text-gray-200">Follow</button>
          </form>
        </div>
        <div class="flex flex-row space-x-4 justify-center h-1/3 w-full pt-4">
          <div class="flex flex-col">
            <p class="text-lg font-semibold"> Following</p>
            <div><%= followingsCount %></div>
            <div class="flex flex-col overflow-y-scroll w-full">
              <table class="text-left">
                <thead>
                </thead>
                <tbody>
                  <% followings.forEach(function(following) { %>
                  <tr>
                    <td><%= following %></td>
                  </tr>
                  <% });
                  %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="flex flex-col">
            <p class="text-lg font-semibold"> Followers<p>
            <div><%= followersCount %></div>
            <div class="flex flex-col overflow-y-scroll w-full">
              <table class="text-left">
                <thead>
                </thead>
                <tbody>
                  <% followers.forEach(function(follower) { %>
                  <tr>
                    <td><%= follower %></td>
                  </tr>
                  <% });
                  %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/shovel.ejs') %>
  </div>
  </body>
</html>
