<script type="module">
  import { getContacts, editContact, deleteContact } from '/dist/odd.js';
  window.editContact = editContact;
  window.deleteContact = deleteContact;

  window.setContactEditForm = function (id, name, tags){
    document.getElementById("edit-contact-name").value = name
    document.getElementById("edit-contact-id").value = id
    document.getElementById("edit-contact-tags").value = tags
  }

  window.refreshContacts = function(){
    getContacts().then((result) => {
      document.querySelector('contact-table').contacts = result;
    })
  }
  refreshContacts();
</script>

